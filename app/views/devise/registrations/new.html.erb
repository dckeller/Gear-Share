<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal form-signin", multipart: true}) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Sign up for GearShare</h2>

  <div class="field form-group">
    <%= f.label :username, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", autofocus: true %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :email, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control"  %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :first_name, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :birthdate, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.date_field :birthdate, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.file_field :avatar, class: "col-sm-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :location, "Address", class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <em>(Go ahead and type it in, we'll find you)</em>
      <%= f.text_field :location, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Sign up", class: "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
  <p class="form-signin-span">Already a member?<%= render "devise/shared/links" %></p>
<% end %>


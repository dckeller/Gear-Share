<div class="wrapper">
  <%= form_for(resource, as: resource_name, html: {class: ' form-horizontal form-signin'}, url: session_path(resource_name )) do |f| %>

    <h2 class="form-signin-heading">Log in to GearShare</h2>

    <div class="field form-group">
      <%= f.label :email, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.password_field :password, class: 'form-control',  autocomplete: "off" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Log in", class: "btn btn-success btn-lg     btn-block" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  <% end %>
</div>

<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

<table>
  <tr>
    <th>Name </th>
    <th>Description </th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td> <%= item.name  %></td>
    <td> <%= item.description  %></td>
    <td> <%= link_to 'Reserve', new_item_reservation_path(item) %> </td>
    <td> <%= link_to 'Show', item_path(item) %> </td>
    <td> <%= link_to 'Edit', edit_item_path(item) %> </td>
    <td> <%= link_to 'Delete', item_path(item),
              method: :delete,
              data: {confirm: 'Are you sure?' } %> </td>
  </tr>
<% end %>
</table>

  <p> <%= link_to 'New', new_item_path %> </p>

</body>
</html>

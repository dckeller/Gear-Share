<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

<%= form_tag(items_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Available Gear" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<h1>Available Gear</h1>

<div class="item-links">
  <%= link_to new_item_path, class: 'btn btn-warning' do %>
    <i></i> Post New Item
  <% end %>
  <%= link_to items_path, class: 'btn btn-warning' do %>
    <i></i> Back to Items
  <% end %>
</div>

<% if @items.blank? %>
  <h4>There is no gear containing the term <%= params[:search] %>.</h4>
<% end %>

<% @items.each_slice(4) do |item_group| %>
  <div class="row item_row">
    <% item_group.each do |item| %>
      <% if item.approved == false %>
        <div class="col-md-3">
          <div class="card">
            <div class="img_container">
              <%= link_to image_tag(item.image.url(:large), class: "card-img-top"), item.image.url %>
              <h4 class="card-title"><%= image_tag("firepit.png", size: '40')%><%= item.name  %></h4>
            </div>
            <div class="card-block text-center">
              <p class="card-text"><%= "Posted: "%><%= item.created_at.strftime("%A, %b %d") %></p>
              <%= link_to image_tag("More-Info-Button.png", size: '100x40'), item_path(item), class: "show-item-button"%>
            </div>
            <div class="append-show"><b><%="Description: "%></b><%= item.description %><br>
                                      <iframe width="200" height="200" frameborder="0" style="border:0"
                                      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBnrDAazGk_GCygyfvQb_xSFfEMhdT2ZK8&q=<%= item.user.location %>" allowfullscreen></iframe><br>
                                      <%= link_to 'Reserve', new_item_reservation_path(item), class: "btn btn-default btn-xs" %>
                                      <%= link_to 'Owner', user_path(item.user), class: "btn btn-default btn-xs" %>
                                      <%= link_to 'View More', item_path(item), class: "btn btn-default btn-xs" %>


            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>



</body>
</html>

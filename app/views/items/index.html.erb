<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<body>

<table>
  <tr>
    <th>Name </th>
    <th>Description </th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td> <%= item.name  %></td>
    <td> <%= item.description  %></td>
    <td> <%= link_to 'Reserve', new_item_reservation_path(item), class: 'btn btn-default btn-xs' %> </td>
    <td> <%= link_to 'Show', item_path(item), class: 'btn btn-primary btn-xs' %> </td>
    <td> <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-info btn-xs' %> </td>
    <td> <%= link_to 'Delete', item_path(item),
              method: :delete,
              data: {confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %> </td>
  </tr>
<% end %>
</table>

<%= link_to new_item_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New
<% end %>

</body>
</html>

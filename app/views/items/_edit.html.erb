<%= form_for(@item, html: {class: 'form-horizontal'}, html: {multipart: true}) do |f|%>
  <div class="field form-group">
    <%= f.label :approved, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :approved, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>

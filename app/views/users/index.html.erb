<!DOCTYPE html>
<html>
<head>
  <title>All Users</title>
</head>
<body>
  <%= form_tag(items_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Available Gear" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
  <h1>Available Gear</h1>

  <% @users.each do |user| %>

 <table>
  <tr>
    <th> Location: </th>
    <th> Owner: </th>
    <th> Item: </th>
    <th> Description: </th>
  </tr>

<% user.items.each do |item| %>
  <tr>
    <td>  <iframe width="150" height="150" frameborder="0" style="border:0"
src="https://www.google.com/maps/embed/v1/place?q=<%= user.location %>&key=AIzaSyABZ3-JpMlz3RG2Aw2r8diLnDs1ShsItKw" allowfullscreen></iframe> </td>
    <td> <%= link_to "#{user.first_name}", user_path(user)  %> </td>
    <td> <%= item.name %> </td>
    <td> <%= item.description %> </td>
    <td> <%= link_to 'View', item_path(item) %> </td>
    <td> <%= link_to image_tag(item.image.url(:small)), item.image.url %> </td>
    <td> <%= link_to 'Reserve', new_item_reservation_path(item) %> </td>
  </tr>
<% end %>
</table>
<% end %>

</body>
</html>



